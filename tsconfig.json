{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",      
    "moduleResolution": "node",                   
    "baseUrl": "src",               
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "@types/index.d.ts"]
}
